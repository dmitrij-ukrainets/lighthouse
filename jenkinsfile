pipeline{
agent any
stages {
stage ('Performance Tests') {
  steps {
    bat 'npm install'
    bat 'npm run lighthouse:ci'
  }
  stage stage('publish results'){
  bat "mkdir $WORKSPACE\\$BUILD_NUMBER\""
  bat bat "xcopy $WORKSPACE\\node_modules\\lighthouse\\lighthouse-cli\\Lighthouse.Dmitrij.Ukrainets.report.html /E $WORKSPACE\\$BUILD_NUMBER\\"
  bat bat "xcopy $WORKSPACE\\node_modules\\lighthouse\\lighthouse-cli\\Lighthouse.Dmitrij.Ukrainets.report.json /E $WORKSPACE\\$BUILD_NUMBER\\"
  archiveArtifacts artifacts: "$BUILD_NUMBER\\Lighthouse.Dmitrij.Ukrainets.report.html, $BUILD_NUMBER\\htmlreport\\Lighthouse.Dmitrij.Ukrainets.report.json"
  }
  post {
    always {
      publishHTML (target: [
        allowMissing: false,
        alwaysLinkToLastBuild: false,
        keepAll: true,
        reportDir: '.',
        reportFiles: '$WORKSPACE\\$BUILD_NUMBER\\Lighthouse.Dmitrij.Ukrainets.report.html',
        reportName: "Lighthouse"
      ])
    }
  }
}
}
}
pipeline{
agent any
stages {
stage ('Performance Tests') {
  steps {
    //deleteDir()
    //checkout scm
    bat 'npm install'
    bat 'npm run lighthouse:ci'
  }
  post {
    always {
      publishHTML (target: [
        allowMissing: false,
        alwaysLinkToLastBuild: false,
        keepAll: true,
        reportDir: '.',
        reportFiles: 'lighthouse-report.html',
        reportName: "Lighthouse"
      ])
    }
  }
}
}
}
pipeline{
agent any
stages {
stage ('Performance Tests') {
  steps {
    deleteDir()
    checkout scm
    //sh 'npm install'
    bat 'npm run lighthouse'
  }
  post {
    always {
      publishHTML (target: [
        allowMissing: false,
        alwaysLinkToLastBuild: false,
        keepAll: true,
        reportDir: '.',
        reportFiles: 'lighthouse-report.html',
        reportName: "Lighthouse"
      ])
    }
  }
}
}
}